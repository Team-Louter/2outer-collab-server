spring:
  application:
    name: ${SPRING_APPLICATION_NAME:Collab}
  datasource:
    url: ${SPRING_DATASOURCE_URL:jdbc:mysql://localhost:3306/collab?serverTimezone=Asia/Seoul&characterEncoding=UTF-8}
    username: ${SPRING_DATASOURCE_USERNAME:root}
    # DO NOT commit real passwords. Set this via environment variable or secret manager.
    password: ${SPRING_DATASOURCE_PASSWORD:YOUR_DB_PASSWORD}
    driver-class-name: ${SPRING_DATASOURCE_DRIVER_CLASS_NAME:com.mysql.cj.jdbc.Driver}

  jpa:
    hibernate:
      ddl-auto: ${SPRING_JPA_HIBERNATE_DDL_AUTO:update}
    show-sql: ${SPRING_JPA_SHOW_SQL:true}
    properties:
      hibernate:
        dialect: ${SPRING_HIBERNATE_DIALECT:org.hibernate.dialect.MySQLDialect}
        format_sql: ${SPRING_HIBERNATE_FORMAT_SQL:true}

  mail:
    host: ${SPRING_MAIL_HOST:smtp.gmail.com}
    port: ${SPRING_MAIL_PORT:587}
    # Use environment variables for credentials
    username: ${SPRING_MAIL_USERNAME:your-email@example.com}
    password: ${SPRING_MAIL_PASSWORD:YOUR_MAIL_PASSWORD}
    properties:
      mail:
        smtp:
          auth: ${SPRING_MAIL_SMTP_AUTH:true}
          starttls:
            enable: ${SPRING_MAIL_STARTTLS_ENABLE:true}
            required: ${SPRING_MAIL_STARTTLS_REQUIRED:true}

server:
  port: ${SERVER_PORT:8080}

jwt:
  # Provide a base64 secret via environment in production
  secret: ${JWT_SECRET:YOUR_JWT_SECRET_BASE64}
  expiration: ${JWT_EXPIRATION:600000}

file:
  upload-dir: ${FILE_UPLOAD_DIR:./uploads}

# Notes:
# - Copy this file to application.yml and fill in real secrets for local development,
#   or set the corresponding environment variables in CI / production.